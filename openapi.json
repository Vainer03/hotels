{
  "openapi": "3.0.0",
  "info": {
    "title": "Hotel Booking API - Hotels",
    "description": "API для управления отелями",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost",
      "description": "Local server"
    }
  ],
  "paths": {
    "/hotels": {
      "get": {
        "tags": ["hotels"],
        "summary": "Получить список отелей с кэшированием",
        "description": "Возвращает список отелей с возможностью фильтрации по городу и стране",
        "parameters": [
          {
            "name": "skip",
            "in": "query",
            "description": "Количество записей для пропуска",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Максимальное количество записей для возврата",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 100
            }
          },
          {
            "name": "city",
            "in": "query",
            "description": "Фильтр по городу",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "country",
            "in": "query",
            "description": "Фильтр по стране",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успешный ответ",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HotelRead"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["hotels"],
        "summary": "Создать новый отель",
        "description": "Создает новый отель в системе",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/HotelCreate"
              },
              "examples": {
                "exampleHotel": {
                  "summary": "Пример создания отеля",
                  "value": {
                    "name": "Grand Hotel",
                    "description": "Роскошный отель в центре города",
                    "address": "ул. Центральная, 1",
                    "city": "Москва",
                    "country": "Россия",
                    "rating": 4.5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Отель успешно создан",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HotelRead"
                }
              }
            }
          },
          "500": {
            "description": "Ошибка при создании отеля",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/hotels/{hotel_id}": {
      "get": {
        "tags": ["hotels"],
        "summary": "Получить отель по ID с кэшированием",
        "description": "Возвращает информацию об отеле по его идентификатору",
        "parameters": [
          {
            "name": "hotel_id",
            "in": "path",
            "description": "ID отеля",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успешный ответ",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HotelRead"
                }
              }
            }
          },
          "404": {
            "description": "Отель не найден",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["hotels"],
        "summary": "Обновить информацию об отеле",
        "description": "Обновляет информацию об отеле по его идентификатору",
        "parameters": [
          {
            "name": "hotel_id",
            "in": "path",
            "description": "ID отеля",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/HotelUpdate"
              },
              "examples": {
                "exampleUpdate": {
                  "summary": "Пример обновления отеля",
                  "value": {
                    "name": "Updated Hotel Name",
                    "rating": 4.8
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Информация об отеле успешно обновлена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HotelRead"
                }
              }
            }
          },
          "404": {
            "description": "Отель не найден",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["hotels"],
        "summary": "Удалить отель",
        "description": "Удаляет отель по его идентификатору. Нельзя удалить отель с существующими комнатами.",
        "parameters": [
          {
            "name": "hotel_id",
            "in": "path",
            "description": "ID отеля",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Отель успешно удален",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageResponse"
                }
              }
            }
          },
          "404": {
            "description": "Отель не найден",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "400": {
            "description": "Нельзя удалить отель с существующими комнатами",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MessageResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Отель успешно удален"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string",
            "example": "Отель не найден"
          }
        }
      },
      "HotelBase": {
        "type": "object",
        "required": ["name", "address", "city", "country"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Название отеля",
            "example": "Grand Hotel Moscow",
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "description": "Описание отеля",
            "example": "Роскошный отель в центре Москвы",
            "nullable": true
          },
          "address": {
            "type": "string",
            "description": "Адрес отеля",
            "example": "ул. Тверская, 1",
            "maxLength": 200
          },
          "city": {
            "type": "string",
            "description": "Город",
            "example": "Москва",
            "maxLength": 50
          },
          "country": {
            "type": "string",
            "description": "Страна",
            "example": "Россия",
            "maxLength": 50
          },
          "rating": {
            "type": "number",
            "format": "float",
            "description": "Рейтинг отеля",
            "example": 4.8,
            "minimum": 0,
            "maximum": 5,
            "default": 0.0
          }
        }
      },
      "HotelCreate": {
        "allOf": [
          {
            "$ref": "#/components/schemas/HotelBase"
          }
        ]
      },
      "HotelUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Название отеля",
            "example": "Updated Hotel Name",
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "description": "Описание отеля",
            "example": "Обновленное описание отеля",
            "nullable": true
          },
          "address": {
            "type": "string",
            "description": "Адрес отеля",
            "example": "ул. Обновленная, 2",
            "maxLength": 200
          },
          "city": {
            "type": "string",
            "description": "Город",
            "example": "Санкт-Петербург",
            "maxLength": 50
          },
          "country": {
            "type": "string",
            "description": "Страна",
            "example": "Россия",
            "maxLength": 50
          },
          "rating": {
            "type": "number",
            "format": "float",
            "description": "Рейтинг отеля",
            "example": 4.9,
            "minimum": 0,
            "maximum": 5
          }
        }
      },
      "HotelRead": {
        "allOf": [
          {
            "$ref": "#/components/schemas/HotelBase"
          },
          {
            "type": "object",
            "required": ["id", "created_at"],
            "properties": {
              "id": {
                "type": "integer",
                "description": "Уникальный идентификатор отеля",
                "example": 1
              },
              "created_at": {
                "type": "string",
                "format": "date-time",
                "description": "Дата и время создания записи",
                "example": "2023-10-01T12:00:00Z"
              }
            }
          }
        ]
      }
    }
  }
}